

  <div class="row style3 fade-in four" id="cnn" style="">
    <div class="col-md-12">
      <p class="site">
        <h2='width:140px; margin-top:0px'><br>
        CNN Top Stories</h2>
      <p style="font-size:.9em; text-align:center">
  <style>
  .awwward{
  opacity: 1;
  transition: 1s;
  text-decoration: none;
  text-align:center;
  }
  .awwward:hover {
  opacity: .7;
  transition: 1s;
  }
  .awwward a {
  text-decoration:none;
  }
  .awwward a:hover {
  /*background-color:blue;  doesn't work  */
  }
  .headline_text {
    top:200px; position:absolute; left:0; width:100%;
  }
  </style>
        <% @cnns.limit(9).order("id DESC").each_with_index do |a, index| %>
        <%# @awwwards.each_with_index do |a, index| %>
        <div class="col-md-3 cnn">
        <a href='<%=a.url%>' style="color:#FFCE00">
          <div class="image">
          <img src="<%=a.image rescue nil%>" style="width:100%; position:relative">
          <h2 class="headline_text">
            <span style="color: #FFCE00;
                           text-align:center;
                           letter-spacing: -1px;
                           background: rgb(0, 0, 0); /* fallback color */
                           background: rgba(0, 0, 0, 0.7);">
              <%=a.title.truncate_words(12, omission: '...') rescue nil%>
            </span>
          </h2>
        </div>
          <br><p style="margin-top:0px; height:0px">
          </p></a>
        </div>
        <% end %>

      <% @googles.order("id DESC").offset(7).first.search.chop.gsub(/[\s,]/ ,"") %>
      </p>
    </div>
  </div>
