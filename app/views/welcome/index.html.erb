<div class="row">
  <div class='col-md-12' style="width:100%">
    <p style="text-align:center; margin-bottom:0px">Today is
      <%= Time.now.strftime("%m/%d/%Y") %>
    </p>
    <p style="text-align:center; font-size:.8em">Updated Daily</p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p style="text-align:center; margin-bottom:0px">Top Rated Movies</p>
    <p style="font-size:.7em; text-align:center">
      <% @movies.each do |m| %>
    <a href='<%=m.url%>'>  <%= m.title %></a> |
      <% end %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p style="text-align:center; margin-bottom:0px">Medium Most Read</p>
    <p style="font-size:.7em; text-align:center">
      <% @mediums.each do |m| %>
      <a href='<%=m.url%>'>  <%= m.title %></a> |
      <% end %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p style="text-align:center; margin-bottom:0px">Awwward of Day</p>
    <p style="font-size:.7em; text-align:center">
      <% @awwwards.each do |a| %>
      <a href='<%=a.url%>'>  <%= a.title %></a> |
      <% end %>
    </p>
  </div>
</div>


</div>
