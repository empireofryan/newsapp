<div class="row style1">
  <div class="col-md-12">
    <p class="site">
      <img src='https://upload.wikimedia.org/wikipedia/en/thumb/9/9f/Twitter_bird_logo_2012.svg/220px-Twitter_bird_logo_2012.svg.png'
      style='width:75px; margin-top:0px'><br>
      Trending</p>
      <style>
      .foobar {
        font-size:2em;
      }
      </style>
    <p style="font-size:.9em; text-align:center">
      <% @twitters.last(20).each do |a| %>
      <%# a.each(5) %>
        <div class="col-md-3 twitter">
      <a href='<%=a.url%>' style="color:yellow">  <%= a.hashtag %> </a>

        </div>

      <% end %>
    </p>
    <script>
      // $( ".twitter:nth-child(2) a" ).css( 'font-size', "4em" );
      $( ".twitter:nth-of-type(10n + 1)" ).addClass( "foobar" )
    </script>
  </div>
</div>
