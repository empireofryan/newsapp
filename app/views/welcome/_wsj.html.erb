     <div class="row style3 four" id="wsj" style="">
       <div class="col-md-12">
         <p class="site">
           <h2='width:140px; margin-top:0px'><br>
           wsj Top Stories</h2>
         <p style="font-size:.9em; text-align:center">
         <% @wsjs.all.limit(9).each_with_index do |a, index| %>
         <% if !a.image.nil? %>
         <div class="col-md-3 wsj">
         <a href='<%=a.url%>' style="color:#FFCE00">
           <div class="image">
           <img src="<%=a.image rescue nil%>" style="width:100%; position:relative">
           <h2 class="headline_text">
             <span style="color: #FFCE00;
                            text-align:center;
                            letter-spacing: -1px;
                            background: rgb(0, 0, 0); /* fallback color */
                            background: rgba(0, 0, 0, 0.7);">
               <%=a.title.truncate_words(12, omission: '...') rescue nil%>
             </span>
           </h2>
         </div>
           <br><p style="margin-top:0px; height:0px">
           </p></a>
         </div>
         <% end %>
         <% end %>

       </p>
     </div>
   </div>
