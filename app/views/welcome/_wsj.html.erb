   $( ".wsj:nth-of-type(4) h2" ).wrapInner("<span style='top:-70px !important; font-size:25px; position:absolute'>")
      $( ".wsj:nth-of-type(4) img" ).wrapInner("<span style='max-height:260px'>");
   $( ".wsj:nth-of-type(5) h2" ).wrapInner("<span style='top:-70px !important; font-size:25px; position:absolute'>")
     $( ".wsj:nth-of-type(5) img" ).css("max-height", "260px");
   $( ".wsj:nth-of-type(6) h2" ).wrapInner("<span style='top:-70px !important; font-size:25px; position:absolute'>")
     $( ".wsj:nth-of-type(6) img" ).wrapInner("<span style='max-height:260px'>");
   $( ".wsj:nth-of-type(7) h2" ).wrapInner("<span style='top:-70px !important; font-size:25px; position:absolute'>")
     $( ".wsj:nth-of-type(7) img" ).wrapInner("<span style='max-height:260px'>");
   $( ".wsj:nth-of-type(8) h2" ).wrapInner("<span style='top:-70px !important; font-size:25px; position:absolute'>")
     $( ".wsj:nth-of-type(8) img" ).wrapInner("<span style='max-height:260px'>");
   $( ".wsj:nth-of-type(9) h2" ).wrapInner("<span style='top:-70px !important; font-size:25px; position:absolute'>")
     $( ".wsj:nth-of-type(9) img" ).wrapInner("<span style='max-height:260px'>");
   $( ".wsj:nth-of-type(1)" ).addClass( "col-md-12" ).removeClass('col-md-3');

   $( ".wsj:nth-of-type(2)" ).addClass( "col-md-6" ).removeClass('col-md-3');
   $( ".wsj:nth-of-type(3)" ).addClass( "col-md-6" ).removeClass('col-md-3');
   $( ".wsj:nth-of-type(4)" ).addClass( "col-md-4" ).removeClass('col-md-3');
   $( ".wsj:nth-of-type(5)" ).addClass( "col-md-4" ).removeClass('col-md-3');
   $( ".wsj:nth-of-type(6)" ).addClass( "col-md-4" ).removeClass('col-md-3');
   $( ".wsj:nth-of-type(7)" ).addClass( "col-md-4" ).removeClass('col-md-3');
   $( ".wsj:nth-of-type(8)" ).addClass( "col-md-4" ).removeClass('col-md-3');
   $( ".wsj:nth-of-type(9)" ).addClass( "col-md-4" ).removeClass('col-md-3');

   $( ".wsj:nth-child(2)" ).addClass( "col-md-6" );
