<div class="row style2" id="drudge">
  <div class="col-md-12">
    <p class="site">
      <img src='http://www.userlogos.org/files/logos/euphonicnight/Drudge2.png'
      style='width:455px;'><br>
    </p>
      <div style="font-size:.9em; text-align:center">
        <% @drudges.past_day.each_with_index do |a, i| %>
        <a href='<%=a.url%>'>
          <div class="animatedParent">
            <h2 class='animated bounceInDown' data-id='<%=i+1%>'> <%= a.title %> </h2>
          </div>
        </a>
        <% end %>
      </div>
    </div>
  </div>
